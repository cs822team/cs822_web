<struts>
	
	<package name="questionAjax" namespace="/question" extends="json-default">  
	 	<action name="all" class="com.suw.action.QuestionAction" method="all">
	 		<result name="success" type="json"></result>
	 	</action>
	 	<action name="questionsRecommend" class="com.suw.action.QuestionAction" method="questionsRecommend">
	 		<result name="success" type="json"></result>
	 	</action>
	 	<action name="hot" class="com.suw.action.QuestionAction" method="hot">
	 		<result name="success" type="json"></result>
	 	</action>
	 	<action name="vote" class="com.suw.action.QuestionAction" method="vote">
	 		<result name="success" type="json"></result>
	 	</action>
	 	<action name="favourite" class="com.suw.action.QuestionAction" method="favourite">
	 		<result name="success" type="json"></result>
	 	</action>
	 	<action name="unfavourite" class="com.suw.action.QuestionAction" method="unfavourite">
	 		<result name="success" type="json"></result>
	 	</action>
	 </package>
	 
	 
	 
</struts>